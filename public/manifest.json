{
  "manifest_version": 2,
  "name": "Ip Based Location Extension",
  "version": "1.0",
  "description": "Fetches location details using IPAPI in a Chrome extension",
  "permissions": [
    "https://ipapi.co/json/"
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "128": "icons/icon-128.png"
  },
  "content_security_policy": "script-src 'self' https://ipapi.co; object-src 'self'"
}
